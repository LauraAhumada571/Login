<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>SB Admin 2 - Register</title>

  <!-- Custom fonts for this template-->
  <link href="/bower_components/bootstrap/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="/bower_components/bootstrap/dist/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

  <div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">

        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h2 text-gray-900 mb-4">Crea una cuenta</h1>
              </div>
              <% include ./partials/message %>
              <form class="/user/register" method="POST">
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <input type="text" class="form-control form-control-user" id="name" placeholder="Nombre"
                    required="true" name="name" value="<% typeof name != 'undefined' ? name : '' %>" >
                  </div>
                  <div class="col-sm-6">
                    <input type="text" class="form-control form-control-user" id="last_name" placeholder="Apellido"
                    required="true" name="last_name" value="<% typeof last_name != 'undefined' ? last_name : '' %>" >
                  </div>
                </div>
                <div class="form-group">
                  <input type="email" class="form-control form-control-user" id="email" placeholder="Correo electrónico"
                  required="true" name="email" value="<% typeof email != 'undefined' ? email : '' %>" >
                </div>
                <div class="form-group">          
                  <select name="rol" class="form-control form-control-user">
                    <option value="Estudiante">Estudiante</option>
                    <option value="Empresario">Empresario</option>
                    <option value="Funcionario">Funcionario</option>
                  </select>
                </div>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <input type="password" class="form-control form-control-user" id="password" placeholder="Contraseña nueva"
                    required="true" autocomplete="off" name="password" value="<%= typeof password != 'undefined' ? password : '' %>" >
                  </div>
                  <div class="col-sm-6">
                    <input type="password" class="form-control form-control-user" id="password2" placeholder="Repetir contraseña"
                    required="true" autocomplete="off" name="password2" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" >
                  </div>
                </div>
                <br>
                <button type="submit" class="btn btn-primary btn-user btn-block">
                    Crear una cuenta
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="/bower_components/bootstrap/vendor/jquery/jquery.min.js"></script>
  <script src="/bower_components/bootstrap/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/bower_components/bootstrap/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/bower_components/bootstrap/dist/js/sb-admin-2.min.js"></script>

</body>

</html>
